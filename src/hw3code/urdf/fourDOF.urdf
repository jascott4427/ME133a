<?xml version="1.0"?>

<robot name="FourDOFRobot">
  
  <!-- Base link -->
  <link name="base_link">
  </link>

  <!-- First joint (theta1) -->
  <joint name="joint1" type="continuous">
    <parent link="base_link"/>
    <child  link="link1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis   xyz="0 0 1"/>
  </joint>

  <link name="link1">
    <visual>
      <origin xyz="0 0 .2" rpy="0 0 0"/>
      <geometry>
        <cylinder length=".4" radius="0.05"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <!-- Second joint (theta2) -->
  <joint name="joint2" type="continuous">
    <parent link="link1"/>
    <child  link="link2"/>
    <origin xyz="0 0 .4" rpy="0 0 0"/>
    <axis   xyz="0 1 0"/>
  </joint>

  <link name="link2">
    <visual>
      <origin xyz="0 0 .2" rpy="0 0 0"/>
      <geometry>
        <cylinder length=".4" radius="0.05"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <!-- Third joint (theta3) -->
  <joint name="joint3" type="continuous">
    <parent link="link2"/>
    <child  link="link3"/>
    <origin xyz="0 0 .4" rpy="0 0 0"/>
    <axis   xyz="0 0 1"/>
  </joint>

  <link name="link3">
    <visual>
      <origin xyz="0 0 .2" rpy="0 0 0"/>
      <geometry>
        <cylinder length=".4" radius="0.05"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <!-- Fourth joint (theta4) -->
  <joint name="joint4" type="continuous">
    <parent link="link3"/>
    <child  link="link4"/>
    <origin xyz="0 0 .4" rpy="0 0 0"/>
    <axis   xyz="0 1 0"/>
  </joint>

  <link name="link4">
    <visual>
      <origin xyz="0 0 .2" rpy="0 0 0"/>
      <geometry>
        <cylinder length=".4" radius="0.05"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <!-- End effector (tool) -->
  <joint name="end_effector_joint" type="fixed">
    <parent link="link4"/>
    <child  link="end_effector"/>
    <origin xyz=".4 0 0" rpy="0 0 0"/>
  </joint>

  <link name="end_effector">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="yellow"/>
    </visual>
  </link>

  <!-- Colors -->
  <material name="gray">    <color rgba="0.6 0.6 0.6 1"/>  </material>
  <material name="yellow">  <color rgba="1.0 1.0 0.0 1"/>  </material>

</robot>
